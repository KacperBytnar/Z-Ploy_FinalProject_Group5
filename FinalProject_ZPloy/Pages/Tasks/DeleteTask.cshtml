<div>
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.task.TaskID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.task.CreatorID)
            </dd>
