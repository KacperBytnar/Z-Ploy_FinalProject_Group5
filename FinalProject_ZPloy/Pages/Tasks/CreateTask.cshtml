@page
@model FinalProject_ZPloy.Pages.Tasks.CreateTaskModel
@{
}
<h1>Create Task</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="@Model.task.Title" class="control-label"></label>
                <input asp-for="@Model.task.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.task.Description" class="control-label"></label>
                <input asp-for="@Model.task.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.task.Prize" class="control-label"></label>
                <input asp-for="@Model.task.Prize" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.task.Location" class="control-label"></label>
                <input asp-for="@Model.task.Location" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.task.PaymentMethod" class="control-label"></label>
                <input asp-for="@Model.task.PaymentMethod" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>